{
  "name": "next-gql-hackernews",
  "version": "1.0.0",
  "description": "hacker news clone project made with next, react and apollo",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "ANALYZE=false next build",
    "start": "next start",
    "find:unused": "next-unused",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["apollo", "graphql", "hacker news", "next.js", "react"],
  "author": "",
  "license": "MIT",
  "next-unused": {
    "alias": {
      "@config/*": [
        "config/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@/apollo/*": [
        "apollo/*"
      ]
    },
    "debug": true,
    "include": [
      "components",
      "pages"
    ],
    "exclude": [],
    "entrypoints": [
      "pages"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.11",
    "@apollo/link-error": "^2.0.0-beta.3",
    "@apollo/link-schema": "^2.0.0-beta.3",
    "@apollo/react-ssr": "4.0.0",
    "apollo-server-micro": "^2.21.0",
    "firebase": "^8.2.9",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "isomorphic-unfetch": "^3.1.0",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.2",
    "next": "^12.1.0",
    "next-offline": "^5.0.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^10.0.7",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,less,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
